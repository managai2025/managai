{
  "id": "cart_recovery_v1",
  "name": "Cart Recovery 2.0",
  "when": {
    "event": "cart_abandoned",
    "within_minutes": 30
  },
  "if": [
    {
      "field": "cart.total",
      "op": ">=",
      "value": 5000
    }
  ],
  "then": [
    {
      "type": "email.send",
      "template": "cart_nudge_A"
    },
    {
      "type": "email.send",
      "template": "price_drop_followup",
      "schedule": {
        "after_minutes": 1440
      }
    }
  ],
  "throttle": {
    "per_user_per_day": 1
  },
  "ab_test": {
    "variants": [
      "A",
      "B"
    ],
    "allocation": "bandit"
  },
  "enabled": true
}